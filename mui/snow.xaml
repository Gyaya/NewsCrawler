<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ModernUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="AccentColor">#0082AD</Color>

    <!-- background image taken from http://good-wallpapers.com/ -->
    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle.Fill>
            <ImageBrush Opacity=".2" ImageSource="snow.jpg" Stretch="UniformToFill" />
        </Rectangle.Fill>
    </Rectangle>
</ResourceDictionary>